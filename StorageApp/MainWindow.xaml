<Window x:Class="StorageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageApp"
        mc:Ignorable="d"        
        AllowsTransparency="True"
        Title="MainWindow" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">
    <Border Style="{StaticResource MainWindowBorderStyle}" DockPanel.Dock="Left">
        <DockPanel>
            <Border Style="{StaticResource LeftMenuBorderStyle}">
                <StackPanel Style="{StaticResource LeftMenuStackPanelStyle}">
                    <Button Style="{StaticResource LeftMenuButtonStyle}" Content="Dashboard"/>
                    <Button Style="{StaticResource LeftMenuButtonStyle}" Content="Storage"/>
                    <Button Style="{StaticResource LeftMenuButtonStyle}" Content="Settings"/>
                </StackPanel>
            </Border>
            <DockPanel>
            </DockPanel>
        </DockPanel>
    </Border>
</Window>
